<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iv_item_home_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_item_home_thumnailcard"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_item_home_thumnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_best_s"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/tv_item_home_contents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/iv_item_home_thumnailcard"
        app:layout_constraintTop_toTopOf="@id/iv_item_home_thumnailcard">

        <TextView
            android:id="@+id/tv_item_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="저한텐 안어울리네요 새거예요"
            android:textColor="@color/gray_900"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_home_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울특별시 동대문구"
                android:textColor="@color/gray_600"/>

            <TextView
                android:id="@+id/tv_item_home_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="58초 전"
                android:textColor="@color/gray_600"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_home_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19,000원"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_home_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:gravity="center_vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/ll_item_home_like"
        app:layout_constraintEnd_toStartOf="@id/ll_item_home_like">

        <ImageView
            android:id="@+id/iv_item_home_comment"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/icon_chat_count"/>

        <TextView
            android:id="@+id/tv_item_home_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/gray_700"
            android:textSize="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_home_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_item_home_like"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:src="@drawable/icon_like_count"/>

        <TextView
            android:id="@+id/tv_item_home_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/gray_700"
            android:textSize="12dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:src="@drawable/ic_mydaangn_setting_outline_24"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"
        android:layout_marginTop="60dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/iv_my_profile_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardCornerRadius="100dp"
            android:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_smb_badge"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_my_profile_1"
            app:layout_constraintStart_toEndOf="@id/iv_my_profile_1"
            app:layout_constraintBottom_toBottomOf="@id/iv_my_profile_1"
            android:text="유저"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginStart="11dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="8dp"
        android:paddingHorizontal="13dp"
        android:background="@drawable/round_button"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="61dp"
        android:text="프로필 보기"
        android:textStyle="bold"
        android:textSize="11sp"
        android:gravity="center"
        android:textAlignment="center"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/iv_carrot_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="114dp"
        android:background="@drawable/round_menu">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="14dp"
                android:src="@drawable/onboarding_logo"
                android:layout_gravity="center"/>
            
            <TextView
                android:id="@+id/tv_my_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="당근하는 새로운 방법, 당근페이!"
                android:textSize="13sp"/>

        </LinearLayout>
        
        <ImageView
            android:layout_width="9dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="19dp"
            android:src="@drawable/icon_profile_arrow"/>

        <LinearLayout
            android:id="@+id/iv_charge_cash"
            android:layout_width="143dp"
            android:layout_height="33dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="58dp"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_button"
            android:gravity="center">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/tab_icon_write_gb_n"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="충전"
                android:textStyle="bold"
                android:textSize="13sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="143dp"
            android:layout_height="33dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_charge_cash"
            android:layout_marginTop="58dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_button"
            android:gravity="center">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/tab_icon_write_gb_n"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="계좌송금"
                android:textStyle="bold"
                android:textSize="13sp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_recent_visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 방문"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_carrot_pay"
        android:layout_marginTop="27dp"
        android:layout_marginStart="15dp"/>

    <LinearLayout
        android:id="@+id/iv_recent_visit_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_recent_visit"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="9dp"
        android:layout_marginStart="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="68dp"
            android:layout_height="34dp"
            android:background="@drawable/round_category"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_my_category_all"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="14dp"
                android:src="@drawable/tab_icon_category_n"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_my_category_all"
                app:layout_constraintBottom_toBottomOf="@id/iv_my_category_all"
                app:layout_constraintStart_toEndOf="@id/iv_my_category_all"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:textAlignment="center"
                android:text="전체"
                android:textSize="12sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:background="@drawable/round_category">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingHorizontal="14dp"
                android:paddingVertical="9dp"
                android:text="남성패션/잡화"
                android:textSize="12sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:background="@drawable/round_category">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingHorizontal="14dp"
                android:paddingVertical="9dp"
                android:text="여성의류"
                android:textSize="12sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:background="@drawable/round_category">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingHorizontal="14dp"
                android:paddingVertical="9dp"
                android:text="가구/인테리어"
                android:textSize="12sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_my_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 거래"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_recent_visit_list"
        android:layout_marginTop="27dp"
        android:layout_marginStart="15dp"/>
    
    <LinearLayout
        android:id="@+id/iv_my_transaction_list_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_my_transaction"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="13dp"
        android:paddingVertical="12dp">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_feed_interest_outline_18"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심목록"
            android:textSize="14sp"
            android:layout_marginStart="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/iv_my_transaction_list_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_my_transaction_list_1"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="12dp">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_community_outline_m"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="판매내역"
            android:textSize="14sp"
            android:layout_marginStart="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/iv_my_transaction_list_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_my_transaction_list_2"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="12dp">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_voucher_outline_m"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구매내역"
            android:textSize="14sp"
            android:layout_marginStart="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/iv_my_transaction_list_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_my_transaction_list_3"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="12dp">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:src="@drawable/btn_favorite_text_for_post"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중고거래 가계부"
            android:textSize="14sp"
            android:layout_marginStart="12dp"/>

    </LinearLayout>

    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/gray_400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_my_transaction_list_4"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_my_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 거래"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"/>

    <LinearLayout
        android:id="@+id/iv_my_life_list_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_my_life"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:paddingVertical="12dp">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_mydaangn_storyarticle_outline_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동네생활 글/댓글"
            android:textSize="14sp"
            android:layout_marginStart="12dp"/>

    </LinearLayout>

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/gray_400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_my_life_list_1"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_my_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동네 가게"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_2"
        android:layout_marginTop="19dp"
        android:layout_marginStart="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>